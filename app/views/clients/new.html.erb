<div class="column-left image">
</div>

<div class="column-right">
  <div class="header">
    <!-- Desktop Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light desktop-nav">
      <a href="<%= root_path %>" class="navbar-brand">
        <%= image_tag("journey-logo-black-white.svg") %>
      </a>
      <% if admin_signed_in? %>
        <ul class="navbar-nav ml-auto">
          <li class="navbar-text dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Hello <%= current_admin.email %>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Edit Account", edit_admin_registration_path, class: "dropdown-item edit-account" %>
              <%= link_to "Admin Panel", admin_path, class: "dropdown-item admin-link" %>
              <div class="dropdown-divider"></div>
              <%= link_to "Logout", destroy_admin_session_path, method: :delete, data: {confirm: "are you sure you want to log out?"}, class: "dropdown-item logout" %>
            </div>
          </li>
        </ul>
      <% end %>
    </nav>
    <!-- End Desktop Navigation -->
    <!-- Mobile Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light mobile-nav">
      <a href="<%= root_path %>" class="navbar-brand">
        <%= image_tag("journey-logo-black-white.svg") %>
      </a>
      <% if admin_signed_in? %>
        <button class="navbar-toggler hamburger" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="line"></span>
          <span class="line"></span>
          <span class="line"></span>
        </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <li class="navbar-text">
            <%= current_admin.email %>
          </li>
          <li class="nav-item">
            <%= link_to "Edit Account", edit_admin_registration_path, class: "nav-link edit-account" %>
          </li>
          <li class="nav-item">
            <%= link_to "Admin Panel", admin_path, class: "nav-link admin-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Logout", destroy_admin_session_path, method: :delete, data: {confirm: "are you sure you want to log out?"}, class: "nav-link logout" %>
          </li>
        </ul>
      <% end %>
      </div>
    </nav>
    <!-- End Mobile Navigation -->
  </div>

  <div class="content">
    <h1 align="center">help our journey grads</h1>
    <div class="client-form">

    <%= flash[:success] unless flash[:success].blank? %>
    <%= flash[:error] unless flash[:error].blank? %>

    <% if @client.errors.any? %>
      <ul>
        <% @client.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_for @client do |f| %>
      <div class="row form-group">
        <div class="col-lg-6 col-xs-12">
          <%= f.label :first_name, "First Name<span class='asterisk'>*</span>".html_safe %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="col-lg-6 col-xs-12">
          <%= f.label :last_name, "Last Name<span class='asterisk'>*</span>".html_safe %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>
      <div class="row form-group">
        <div class="col-lg-6 col-xs-12">
          <%= f.label :email, "Email<span class='asterisk'>*</span>".html_safe %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="col-lg-6 col-xs-12">
          <%= f.label :phone_number, "Phone Number<span class='asterisk'>*</span>".html_safe %>
          <%= f.text_field :phone_number, class: "form-control" %>
        </div>
      </div>
      <div class="row form-group">
        <div class="col-lg-6 col-xs-12">
          <%= f.label :pick_up_location, "Pick Up Address<span class='asterisk'>*</span>".html_safe %>
          <%= f.text_field :pick_up_location, class: "form-control" %>
        </div>
        <div class="col-lg-6 col-xs-12">
          <%= f.label :city, "City<span class='asterisk'>*</span>".html_safe %>
          <%= f.text_field :city, class: "form-control" %>
        </div>
      </div>
      <div class="row form-group">
        <div class="col-lg-6 col-xs-12">
          <%= f.label :pick_up_date, "Pick Up Date<span class='asterisk'>*</span>".html_safe %>
          <%= f.date_field :pick_up_date, class: "form-control" %>
        </div>
        <div class="col-lg-6 col-xs-12">
          <%= f.label :pick_up_time, "time the tree will be ready<span class='asterisk'>*</span>".html_safe %>
          <%= f.time_field :pick_up_time, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :instructions, "Special instructions".html_safe %>
        <%= f.text_area :instructions, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit :submit, class: "btn btn-primary form-control homepage-form-btn", value: "Submit" %>
      </div>
    <% end %>

    </div>
  </div>
</div>
